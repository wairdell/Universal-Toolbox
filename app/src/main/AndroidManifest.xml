<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sharp.ambition.toolbox">

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".ToolboxApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UniversalToolbox">

        <activity
            android:name=".product.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".product.image.qrcode.GenerateQrcodeActivity" />

        <activity android:name=".product.image.qrcode.ScanQrcodeActivity" />

        <activity android:name=".product.image.qrcode.QrcodeFinderActivity" />

    </application>

</manifest>